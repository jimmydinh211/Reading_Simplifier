{
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Get selected HTML"
  },
  "description": "Gets the HTML of the user's selection",
  "name": "HTML Selection",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],
  "version": "0.0.1",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}